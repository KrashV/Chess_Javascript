extends ../layout

block includelib
    // include chessboard.js 
    include ./chessboardjs.pug
    //include chess.js
    include ./chessjs.pug
    //include the board
    include ./board.pug
    //include the engineGame
    include ./engine.pug
    //inclue main game
    include ./main.pug
    //include socket.io
    include ./socket.pug

block includestyle
    include ./style.pug
block menu
    div(class='container-fluid')
        h2(style="text-align:center;") Chess.io

        div(class="row")
                button(id="newGameButton" class="btn btn-primary") New Game
        

block menu2
    div(class='row')
            form(id="joinGame" method="" )
                label Enter Host Name
                input(id="hostName" class="chat-box" type="text")
                span
                    button(class="btn btn-primary" type='submit') Join Host


block content
    div(class="container-fluid")
        div(class="row")
            h3(id="name" style="margin-bottom:20px; text-align:center;width:100%;") #{userName}

        div(class="row")
           
        

            div(class="col-sm info")
                // Info data
                h4(id="headline" style='text-align:center; width:100%;') Messages
                
                div(class="col-sm window moves-history")
                    ul(id='messages' class='messages-window' data-spy='scroll')
                        
                div(class="col-sm window chat-box-container")
                    form(id="chatBox" method="" )
                        input(id="chat" class="chat-box" type="text")
                        span
                            button(class="btn btn-primary" type='submit') Send
                div(class="jumbotron jumbotron-fluid " style="text-align:center; margin-top:5px;padding-top:10px;padding-bottom:10px")
                div(class="container" style="text-align:center;")
                    p(class='engineStatus') Engine Status
                //test the log, the scroller is not implemented
                div(class="row")
                    div
                        p(class="logger") Logger :

            div(id="board" style="width:550px;padding-top:50px; margin:auto;")

        
        
